<?xml version="1.0" encoding="utf-8"?>
<component:PopUp xmlns:fx="http://ns.adobe.com/mxml/2009" 
				 xmlns:s="library://ns.adobe.com/flex/spark" 
				 xmlns:mx="library://ns.adobe.com/flex/mx" 
				 xmlns:component="org.openforis.collect.ui.component.*" 
				 title="{Message.get('speciesImport.list')}" 
				 height="150" width="250"
				>	
	<fx:Script>
		<![CDATA[
			import org.openforis.collect.i18n.Message;
			
			private var _newTaxonomy:Boolean;
			
			[Bindable]
			public function get newTaxonomy():Boolean {
				return _newTaxonomy;
			}
			
			public function set newTaxonomy(value:Boolean):void {
				_newTaxonomy = value;
			}
			
		]]>
	</fx:Script>
	
	<component:layout>
		<s:VerticalLayout horizontalAlign="center" 
						  verticalAlign="middle"
						  gap="30" />
	</component:layout>
	
	<s:HGroup verticalAlign="middle">
		<s:Label text="{Message.get('speciesImport.name')}" 
				 styleName="formLabel" />
		<s:TextInput id="nameTextInput" width="150" />
	</s:HGroup>
	
	<s:HGroup gap="40">
		<s:Button id="okButton"
				  label="{Message.get('global.ok')}"
				  useHandCursor="true" 
				  buttonMode="true" />
		
		<s:Button id="cancelButton"
				  label="{Message.get('global.cancel')}"
				  useHandCursor="true" 
				  buttonMode="true" />
	</s:HGroup>
	
</component:PopUp>
