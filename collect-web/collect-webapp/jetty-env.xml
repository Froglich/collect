<?xml version="1.0"  encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<Configure id ="collect_conf" class="org.mortbay.jetty.webapp.WebAppContext">
    <New id="collect_datasource" class="org.mortbay.jetty.plus.naming.Resource">
        <Arg>jdbc/collectDs</Arg>
        <Arg>
            <New class="org.apache.commons.dbcp.BasicDataSource">
                <Set name="driverClassName">org.h2.Driver</Set>
                <Set name="url">jdbc:h2:~/dev/temp/data/new/collect</Set>
                <Set name="username"></Set>
                <Set name="password"></Set>
            </New>
        </Arg>
    </New>
</Configure>